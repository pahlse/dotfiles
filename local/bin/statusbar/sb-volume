if [ $(pamixer --get-mute) = true ]; then
	echo [ïª€]
elif [  "$device" = 1 ]; then
	icon="ïŸŠ"
elif [ "$vol" -gt "60" ]; then
	icon="ï€¨ "
elif [ "$vol" -lt "20" ]; then
	icon="ï€¦ "
